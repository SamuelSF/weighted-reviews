<h3 class="text-center"><%= @user.username %></h3>

<% if current_user == @user %>
    <div class="row faux-row review-element">
        <div class="col-sm-12">
            <a href="/users/edit"> Edit Your Information </a>
        </div>
    </div>
<% end %>

<div class="row faux-row review-element">
    <div class="col-sm-12">
        <a href="/users/<%= @user.id %>/reviews">Reviews by <%= @user.username %>.</a>
    </div>
</div>

<div class="row faux-row review-element">
    <div class="col-sm-12">
        <a href="/users/<%= @user.id%>/ratings">Review Ratings by <%= @user.username %>.</a>
    </div>
</div>


