<form action="/search" method="gets">
    <div class="form-group">
        <label for="search-bar">Game Search</label>
        <input type="text" name="query" class="form-control" id="search-bar" placeholder="Title">
    </div>
    <div class="form-group">
    <button class="btn btn-default">Submit</button>
    </div>
</form>

<%if @products != nil && @products.length > 0 %>
    <% @products.each do |product| %>
        <div class="row">
            <a href="/products/<%=product.id%>">
                <img src="<%= product.thumb_img %>">
                <strong><%= product.title %></strong>
            </a>
            <p><%= product.description %></p>
        </div>
    <% end %>
<% elsif @products %>
    <strong>Sorry.  No Games Match your search query.</strong>
<% end %>