<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <form action="/search" method="gets">
            <div class="form-group">
                <h2 class="text-center page-header"><label for="search-bar">Game Search</label></h2>
                <input type="text" name="query" class="form-control" id="search-bar" placeholder="Title">
            </div>
            <div class="form-group">
            <button class="btn btn-default">Submit</button>
            </div>
        </form>
    </div>
</div>

<%if @products != nil && @products.length > 0 %>
    <% @products.each do |product| %>
        <div class="row faux-row">
            <div class="col-sm-4">
                <a href="/products/<%= product.id %>">
                    <img src="<%= product.med_img %>" class="img-responsive center-block">
                </a>
            </div>
            <div class="col-sm-8">
                <a href="/products/<%= product.id %>">
                    <h3 class="text-center"><%= product.title %></h3>
                </a>
                <p class="text-justify"><%= product.description%></p>
                <% if product.product_score != nil %>
                    <em><%= product.review_num%> User Reviews</em>
                    <h4 class="text-center outline-element"><%= product.product_score.round(1) %></h4>
                <% end %>
            </div>
        </div>
    <% end %>
<% elsif @products %>
    <div class="row">
        <div class="col-sm-12">
            <strong class="text-center">Sorry. No Games Match your search query.</strong>
        </div>
    </div>
<% end %>