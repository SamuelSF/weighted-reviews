<h3> Your Review of <%= @product.title %> </h3>
    <form action="/products/<%= @product.id %>/reviews" method="post">
        <div class="form-group">
            <label for="review_title"> Review Title </label>
            <input type="text" class="form-control" name="review[title]" id="review_title">
        </div>
        <div class="form-group">
            <label for="review_body">Your Review</label>
            <textarea name="review[body]" rows="15" id="review_body" class="form-control" placeholder="Your review."></textarea>
        </div>
        <div class="form-group">
            <label for="review_score">Score</label>
            <select name="review[review_score]" id="review_score">
                <% (1..10).each do |num| %>
                    <option value ="<%= num %>"><%= num %></option>
                <% end %>
            </select>
        </div>
        <input type="hidden" name="authenticity_token"value="<%= form_authenticity_token %>">
        <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>